<!-- HUB SECTIONS -->
<div id="hub-sections-row" class="hidden-sm">
  <div class="skills-section animated active">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-xs-12">
          <div class="skill pre-requisite">
            <span class="icon-pre-requisite"></span>
            <h3>PRE-REQUISITE SKILLS</h3>
            <p>Know number names and the count sequence; Count to tell the number of objects; Compare numbers</p>
            <div class="grey-box">
              <h3>AchieveMath Level K <br>Lessons 1-12</h3>
              <button class="btn btn-success" type="button">VIEW LESSONS</button>

