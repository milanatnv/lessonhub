<!-- HEADER (MOBILE) -->
<header class="l-header mobile-header visible-xs">
  <nav class="navbar navbar-default">
    <div class="container-fluid">

      <div class="navbar-header">

        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#profile-menu">
          <span class="icon-profile"></span>
        </button>

        <a class="navbar-brand" href="/">
          <img alt="Catapult Learning" src="/assets/images/logo-mobile.svg">
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="profile-menu">
        <ul class="nav navbar-nav">
          <li>{{#link-to ""}}Analytics{{/link-to}}</li>
          <li>{{#link-to ""}}Content management{{/link-to}}</li>
          <li>{{#link-to ""}}User management{{/link-to}}</li>
          <li>{{#link-to ""}}Logout{{/link-to}}</li>
        </ul>
      </div><!-- /.navbar-collapse -->

    </div><!-- /.container-fluid -->
  </nav>
</header>
<!-- /HEADER (MOBILE) -->

<!-- HEADER	(DESKTOP) -->
<header class="l-header hidden-xs" id="menubar">
  <nav id="nav">
    <ul class="nav-list align-left">
      <li>
        <a class="navbar-logo" href="/">
          <img alt="Catapult Learning" src="/assets/images/logo.svg">
        </a>
      </li>
      <li class="divider">
        <span class="split"></span>
      </li>
      <li>Lesson Hub</li>
    </ul>

    <a {{action "toggleDraftMode"}} class="align-right edit-icon">
      {{#if isDraftMode}}
        <span class="glyphicon glyphicon-floppy-disk" title="Save changes"></span>
      {{else}}
        <span class="glyphicon glyphicon-pencil" title="Enter draft mode"></span>
      {{/if}}
    </a>

    <!-- Profile drop-down menu -->
    <ul class="dropdown nav-list align-right">
      <li>
        <a href="#" class="dropdown-toggle" id="profile-menu" data-toggle="dropdown" aria-expanded="true">{{user.name}}
          <span class="icon-arrow-down"></span>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="profile-menu">
          <li role="presentation">{{#link-to "" role="menuitem" tabindex="-1" }}Analytics{{/link-to}}</li>
          <li role="presentation">{{#link-to "" role="menuitem" tabindex="-1" }}Content management{{/link-to}}</li>
          <li role="presentation">{{#link-to "" role="menuitem" tabindex="-1" }}User management{{/link-to}}</li>
          <li role="presentation" class="divider"></li>
          <li role="presentation">{{#link-to "" role="menuitem" tabindex="-1" }}Logout{{/link-to}}</li>
        </ul>
      </li>
    </ul>
  </nav>
</header>
{{#if isDraftMode}}
  <header class="l-header edit-content hidden-xs">
    <nav>
      <div class="container-fluid no-pad">
        <div class="row">

          <div class="col-lg-2 col-md-3 col-sm-6 col-xs-2">
            <ul class='lessons-nav'></ul>
          </div>

          <div class="col-lg-8 col-md-6 col-xs-10 col-xs-offset-2 col-md-offset-0">
            <p>This page is in draft mode. Click on editable text to customize it.</p>
          </div>


          <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 pull-right no-pad">
          </div>
        </div>
      </div>
    </nav>
  </header>
{{/if}}
<!-- /HEADER (DESKTOP) -->

<!-- GREEN HEADER -->
{{render "hub/header" tagName="nav" id="sub-nav"}}
<!-- / GREEN HEADER -->

